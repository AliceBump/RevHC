{
  "name": "revhc",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:desktop": "pnpm --filter @revhc/desktop tauri dev",
    "dev:mobile": "pnpm --filter @revhc/mobile start",
    "dev:web": "pnpm --filter @revhc/web dev",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "turbo": "^2.5.0"
  },
  "packageManager": "pnpm@10.12.1"
}
